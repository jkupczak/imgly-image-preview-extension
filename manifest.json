{

  "manifest_version": 2,

  "name": "Mirage - Image Previewer",

  "web_accessible_resources": [
    "css/*",
    "js/*",
    "icons/*"
  ],

  "description": "Upgrade Chrome's default image preview functionality.",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icons/mirage-256.png",
    "default_title": "Mirage - Image Previewer"
  },

  "icons": {
    "256": "icons/mirage-256.png"
  },

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": true
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "activeTab",
    "storage",
    "tabs",
    "history",
    "webNavigation",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "http://*/*",
    "https://*/*",
    "*://*/*",
    "*://*.google.com/*",
    "notifications",
    "alarms",
    "file:///*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["css/preload.css"],
      "js": ["js/arrive.js", "js/color-thief.min.js", "js/mirage.js"],
      "run_at": "document_start"
    }
  ]

}
